commands:
  01_mkdir:
    command: "sudo mkdir -p /tmp/LibreOffice"
  02_extract_libreoffice_packages:
    command: "sudo tar -xvzf /tmp/LibreOffice_5.2.5_Linux_x86-64_rpm.tar.gz -C /tmp/LibreOffice"
  03_install_libreoffice_packages:
    command: "sudo yum -y localinstall /tmp/LibreOffice/LibreOffice_5.2.5.1_Linux_x86-64_rpm/RPMS/*.rpm"
  04_symlink_libreoffice_executable:
    command: "sudo ln -sf /opt/libreoffice5.2/program/soffice /usr/local/bin/soffice"
