commands:
  01_become_root:
    command: 'sudo su'
  02_get_libreoffice_packages:
    command: 'wget -N http://download.documentfoundation.org/libreoffice/stable/5.2.4/rpm/x86_64/LibreOffice_5.2.4_Linux_x86-64_rpm.tar.gz -O LibreOffice_5.2.4_Linux_x86-64_rpm.tar.gz'
  03_extract_libreoffice_packages:
    command: 'tar -xvzf LibreOffice_5.2.4_Linux_x86-64_rpm.tar.gz'
  04_install_libreoffice_packages:
    command: 'yum -y localinstall LibreOffice_5.2.4.2_Linux_x86-64_rpm/RPMS/*.rpm'
  05_symlink_libreoffice_executable:
    command: 'ln -sf /opt/libreoffice5.2/program/soffice /usr/local/bin/soffice'
