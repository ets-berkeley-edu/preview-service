commands:
  01_become_root:
    command: 'sudo su'
  02_extract_libreoffice_packages:
    command: 'tar -xvzf /tmp/LibreOffice_5.2.5_Linux_x86-64_rpm.tar.gz'
  03_install_libreoffice_packages:
    command: 'yum -y localinstall LibreOffice_5.2.5.1_Linux_x86-64_rpm/RPMS/*.rpm'
  04_symlink_libreoffice_executable:
    command: 'ln -sf /opt/libreoffice5.2/program/soffice /usr/local/bin/soffice'
