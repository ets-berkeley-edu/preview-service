commands:
  01_become_root:
    command: 'sudo su'
  02_extract_executables:
    command: 'tar -xvf /tmp/ffmpeg-release-64bit-static.tar.xz'
  03_symlink_ffmpeg_executable:
    command: 'ln -sf "$(pwd)/$(ls -td ffmpeg-*-64bit-static/ffmpeg | head -1)" /usr/local/bin/ffmpeg'
  04_symlink_ffprobe_executable:
    command: 'ln -sf "$(pwd)/$(ls -td ffmpeg-*-64bit-static/ffprobe | head -1)" /usr/local/bin/ffprobe'
