commands:
  01_become_root:
    command: 'sudo su'
  02_extract_ghostscript_executable:
    command: 'tar -xvzf /tmp/ghostscript-9.20-linux-x86_64.tgz'
  03_set_permissions_for_ghostscript_executable:
    command: 'chmod +x ghostscript-9.20-linux-x86_64/gs-920-linux_x86_64'
  04_symlink_ghostscript_executable:
    command: 'ln -sf "$(pwd)/ghostscript-9.20-linux-x86_64/gs-920-linux_x86_64" /usr/local/bin/gs'
